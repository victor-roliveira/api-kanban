generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrdemServico {
  id          Int          @id @default(autoincrement())
  nome        String
  responsavel String?
  dataInicio  DateTime
  dataFim     DateTime
  disciplinas Disciplina[] @relation("OSDisciplinas")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Disciplina {
  id     Int            @id @default(autoincrement())
  nome   String
  cor    String?
  icone  String?
  ordens OrdemServico[] @relation("OSDisciplinas")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
}
